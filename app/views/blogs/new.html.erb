<div class="my-container">
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-sm-offset-2">
          <h4>New Blog</h4>
          <%= form_for(@blog) do |f| %>
          <hr class="divider-w mt-10 mb-20">
          <br/>
          <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12 ">
              <img id="preview" src="#" class="img-fluid"/>
            </div>
          </div>
          <div class="form-group">
            <%= f.file_field :url, id: "blog-cover", class:"form-control-file", required: true %>
          </div>
          <div class="form-group">
            <%= f.text_field :title, class: "form-control input-lg", placeholder: "Title", required: true %>
          </div>
          <div class="form-group">
            <%= f.text_area :content, required: true, class: "form-control", placeholder: "Content" %>
          </div>
          <div class="form-group">
            <%= f.submit "Save", class: "btn btn-primary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
