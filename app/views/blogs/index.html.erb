<div class="my-container">
<p id="notice"><%= notice %></p>
<h2 class="center my-section">All blogs</h2>
  <section id="blog-grid" class="section blog blog-grid">
    <div class="container">
      <div id="blogContent" class="section-content">
        <% if current_user == @user %>
        <%= link_to new_blog_path, class: "btn btn-primary" do %>
          <i class="fa fa-file-text-o"></i> New blog
          <% end %>
        <% end %>
      <br>
      <br>
        <div class="row">
          <%# <%= will_paginate %>
          <% if @blogs.any? %>
          <%= render @blogs %>
        <% else %>
          <h3>No blog yet</h3>
          <% end %>
          <%# <%= will_paginate %>
        </div>
      </div>
    </section>
  </div>
