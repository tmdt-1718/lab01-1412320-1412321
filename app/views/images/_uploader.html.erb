<% if @new_image %>
<div class="modal" id="uploader">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for(@new_image, url: request.fullpath + "/images") do |f| %>
      <div class="modal-header">
        <h5 class="modal-title">Upload new image to album</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <span class="picture">
          <div class="row">
            <div class="col-sm-12 ">
              <img id="preview" src="#" class="img-fluid"/>
            </div>
          </div>
          <%= f.file_field :url, id: "blog-cover", class:"form-control-file" %>
        </span>
      </div>
      <div class="modal-footer">
        <%= f.submit "Save", class: "btn btn-primary" %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>
