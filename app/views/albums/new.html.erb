<div class="my-container">
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-sm-offset-2">
          <h4>New Album</h4>
          <p id="notice"><%= notice %></p>
          <p id="alert"><%= alert %></p>
          <%= form_for(@album) do |f| %>
            <hr class="divider-w mt-10 mb-20">
            <br/>
            <div class="form-group">
              <%= f.text_field :name, class: "form-control input-lg", placeholder: "Title", required: true %>
            </div>
            <div class="row">
              <div class="col-lg-4 col-md-6 col-sm-12 ">
                <img id="preview" src="#" class="img-fluid" />
              </div>
            </div>
            <div class="form-group">
              <%= f.fields_for(@image) do |e| %>
              <%= e.file_field :url, id: "blog-cover", class:"form-control-file", required: true %>
              <% end %>
            </div>
            <div class="form-group">
              <%= f.submit "Save", class: "btn btn-primary" %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </section>
